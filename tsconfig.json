{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "outDir": "dist",
        "rootDir": "./src",
        "target": "es2017",
        "sourceMap": true,
        "declaration": true,
        "jsx": "preserve",
        // "typeRoots": [
        //     "./typings",
        //     "./node_modules/@types/"
        // ],
        "lib": [
            "es2017",
            "dom"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}